  "scripts": {
    "compile": "babel --presets stage-2 -d lib/ src/",
    "prepublish": "npm run compile",
    "jscs": "jscs -c .jscsrc src --esnext",
    "eslint": "eslint -c .eslintrc src",
    "karma": "karma start",
    "test": "npm run jscs && npm run eslint && karma start",
    "watch": "npm-watch"
  },
  "main": "./src/index.js",
  "watch": {
    "compile": [
      "src/**/*.js"
    ],
    "jscs": [
      "src/**/*.js",
